{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.iterable"
    ],
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./code/typescript/",

    /* Strict Type-Checking Options */
    "noImplicitAny": false,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": ".",

    /* Experimental */
    "pretty": true  // colorizes compiler outputs
  },
  "include": [
    "./code/typescript/**/*"
  ],
  "exclude": [
    "./code/node_modules"
  ]
}

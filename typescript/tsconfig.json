{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "es2015",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.iterable"
    ],
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",

    /* Strict Type-Checking Options */
    "noImplicitAny": false,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": ".",

    "jsx": "react",

    /* Experimental */
    "pretty": true  // colorizes compiler outputs
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
  ]
}
